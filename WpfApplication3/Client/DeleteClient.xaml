            <Label Content="First Name:" Canvas.Left="71" Canvas.Top="185"/>
            <Label Content="Last Name:" Canvas.Left="73" Canvas.Top="213"/>
            <Label Content="Phone:" Canvas.Left="95" Canvas.Top="241"/>

        </Canvas>
        <Canvas Background="#FF1E4273" Margin="82,369,857.4,197.4" Width="111.2" Height="27.2">
            <Label x:Name ="btnDeleteClient" Content="      Delete" FontSize="16" Width="111" Foreground="White" FontWeight="Bold" Cursor="Hand" Height="31" Canvas.Left="0" Canvas.Top="-4" MouseDown="btnDeleteClient_MouseDown"/>
