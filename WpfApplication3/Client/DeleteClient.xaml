                    <DropShadowEffect BlurRadius="15" ShadowDepth="7"/>
                </Rectangle.Effect>
            </Rectangle>
            <TextBox x:Name ="txtBoxClientID" Background ="#FFF4F4F5" IsReadOnly="True" BorderThickness="0" TextWrapping="Wrap" Text="ClientID" Height="23" Canvas.Left="141" Canvas.Top="156" Width="131" FontWeight="Bold" FontSize="18"/>
            <TextBox x:Name= "txtBoxFName" Background ="#FFF4F4F5" IsReadOnly="True" BorderThickness="0" TextWrapping="Wrap" Text="First Name" Height="23" Canvas.Left="141" Canvas.Top="185" Width="131" FontWeight="Bold" FontSize="18"/>
            <TextBox x:Name= "txtBoxLName" Background ="#FFF4F4F5" IsReadOnly="True" BorderThickness="0" TextWrapping="Wrap" Text="Last Name" Height="23" Canvas.Left="141" Canvas.Top="212" Width="131" FontWeight="Bold" FontSize="18"/>
