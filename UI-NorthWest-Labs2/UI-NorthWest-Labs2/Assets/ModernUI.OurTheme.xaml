<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mui="http://firstfloorsoftware.com/ModernUI">

    <!-- derive from Light or Dark theme-->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/FirstFloor.ModernUI;component/Assets/ModernUI.Dark.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!-- specify the accent color (optional) -->
    <Color x:Key="AccentColor">#00C0F2</Color>

    <!-- custom theme resources-->
    <Rectangle x:Key="WindowBackgroundContent" x:Shared="false">
        <Rectangle.Fill>
            <SolidColorBrush Opacity=".04" Color="{DynamicResource AccentColor}"/>
            <!--<LinearGradientBrush EndPoint="0,1" Opacity=".05" ColorInterpolationMode="ScRgbLinearInterpolation">
                <GradientStop Offset=".3" Color="Transparent" />
                <GradientStop Offset="0" Color="{DynamicResource AccentColor}" />
                
            </LinearGradientBrush>-->
        </Rectangle.Fill>
    </Rectangle>
</ResourceDictionary>