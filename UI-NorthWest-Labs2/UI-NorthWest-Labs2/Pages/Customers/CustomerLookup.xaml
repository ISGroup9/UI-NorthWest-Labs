<UserControl x:Class="UI_NorthWest_Labs2.Pages.Customers.CustomerLookup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <Grid.RowDefinitions>
            <RowDefinition Height="17"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="61"/>
            <RowDefinition Height="143"/>
        </Grid.RowDefinitions>



        <TextBox Margin="10,10,0,0" Grid.Row="1" Height="26" VerticalAlignment="Top" HorizontalAlignment="Left" Width="176" Grid.RowSpan="2" />
        <Button x:Name="SearchButton" Content="Search" Margin="10,10,0,0" Grid.Row="2" Command="NavigationCommands.GoToPage" CommandParameter="/Pages/Customers/CustomerInfo.xaml" Height="29" VerticalAlignment="Top" HorizontalAlignment="Left" Width="125" />
        <TextBlock Style="{StaticResource Heading2}" HorizontalAlignment="Left" Margin="10,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="Search For A Client" Height="21" Width="143" Grid.RowSpan="2"/>


    </Grid>

</UserControl>
