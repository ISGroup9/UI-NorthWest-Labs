<UserControl x:Class="UI_NorthWest_Labs2.Pages.Sales.SalesReports"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <!-- TODO: set @SelectedSource -->
        <mui:ModernTab SelectedSource="/Pages/Sales/Reports/CustomerReport.xaml" Layout="List" ListWidth="auto">
            <mui:ModernTab.Links>
                <!-- TODO: set @Source -->
                <mui:Link DisplayName="Customer Report" Source="/Pages/Sales/Reports/CustomerReport.xaml" />
                <mui:Link DisplayName="Performance (Sales) Report" Source="/Pages/Sales/Reports/PerformanceReport.xaml" />
            </mui:ModernTab.Links>
        </mui:ModernTab>
    </Grid>
</UserControl>
